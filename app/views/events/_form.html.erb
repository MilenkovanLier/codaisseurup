<%= form_for @event do |f| %>
<div class="form-group">
  <label>Name Event</label><br><br>
  <%= f.text_area :name, rows: 1, placeholder: "Name Your Event", class: "form-control" %>
</div>

  <div class="form-group">
    <label>Event Type</label><br>
    <%= f.select :name, [["Tech", "Tech"], ["Familie", "Familie"], ["Sport & Health", "Sport & Health"]], id: "event_type", prompt: "Select event type", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Number of People</label><br>
    <%= f.select :capacity, [["2-5", 0], ["6-8", 1], ["9-12", 2], ["12-15", 3], ["15-18", 4], ["19 +", 5]], prompt: "Select number of people", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Price Range</label><br>
    <%= f.select :price, [["€ 10", 10], ["€ 20", 20], ["€ 30", 30], ["€ 40+", 40]], prompt: "Select Price Range", class: "form-control" %>
  </div>


  <div class="form-group">
    <label>Description</label><br>
    <%= f.text_area :description, rows: 5, placeholder: "Say something about your event", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Location</label>
    <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
  </div>

  <label>Amenities</label>

  <div class="form-group">
    <%= f.check_box :includes_drinks %> Includes Drinks
  </div>
  <div class="form-group">
    <%= f.check_box :includes_food %> Includes Food
  </div>
  <div class="form-group">
    <%= f.check_box :active %> Active User
  </div>

  <label>Publish this place?</label>

  <div class="form-group">
    <%= f.check_box :active %> Active
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
      <% end %>
